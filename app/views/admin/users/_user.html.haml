%tr
  %td= user.id
  %td= fancy_link user
  %td= highlight user.email, params[:email_search]
  %td= user.admin?
  %td
    %ul.actions
      %li= link_to 'show', resource_path(user)
      %li= link_to 'edit', edit_resource_path(user)
      %li= link_to 'delete', resource_path(user), :confirm => 'really delete?', :method => :delete