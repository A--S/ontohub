source 'https://rubygems.org'

gem 'rails', '~> 3.2.2'
gem 'pg'


# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'
  gem 'haml',         '~> 3.1.4'

  gem 'therubyracer'
  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

# XML Parser
gem 'nokogiri', '~> 1.5.0'

# Authorization
gem 'devise', '~> 2.0.0'

group :test do
  gem 'shoulda'
  gem 'shoulda-matchers'
  gem 'shoulda-context'
end

group :development do
  gem 'capistrano'
end
